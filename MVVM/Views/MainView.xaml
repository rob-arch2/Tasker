<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tasker.MVVM.Views.MainView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Tasker.Converters"
    Title="Tasker"
    BackgroundColor="#F5F5F5">

    <ContentPage.Resources>
        <converters:ColorConverter x:Key="ColorConverter" />
        <converters:DateTimeConverter x:Key="DateTimeConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="5">

        <!--  HEADER  -->
        <Frame
            Grid.Row="0"
            Padding="0"
            Margin="0,0,0,5"
            BackgroundColor="Black"
            CornerRadius="10"
            HasShadow="False">
            <Label
                Text="MY TASKS"
                FontAttributes="Bold"
                FontSize="16"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Padding="0,15" />
        </Frame>

        <!--  CATEGORIES / ADD BUTTON ROW  -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,0,0,5">
            <Frame
                Grid.Column="0"
                Padding="0"
                BackgroundColor="White"
                CornerRadius="10"
                HasShadow="False"
                BorderColor="#E0E0E0">
                <Label
                    Text="CATEGORIES"
                    FontAttributes="Bold"
                    FontSize="14"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="0,15" />
            </Frame>

            <Frame
                Grid.Column="1"
                Padding="0"
                Margin="5,0,0,0"
                BackgroundColor="White"
                CornerRadius="10"
                HasShadow="False"
                BorderColor="#E0E0E0"
                WidthRequest="55">
                <Button
                    Text="+"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    Clicked="AddCategoryClicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </Frame>
        </Grid>

        <!--  FILTER ROW  -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,0,0,5">
            <HorizontalStackLayout Grid.Column="0" Spacing="5">
                <Button
                    Text="All"
                    FontSize="12"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="Black"
                    CornerRadius="15"
                    Padding="12,5"
                    CommandParameter="All"
                    Clicked="OnFilterClicked" />
                <Button
                    Text="Pending"
                    FontSize="12"
                    FontAttributes="Bold"
                    TextColor="#555555"
                    BackgroundColor="White"
                    BorderColor="#E0E0E0"
                    BorderWidth="1"
                    CornerRadius="15"
                    Padding="12,5"
                    CommandParameter="Pending"
                    Clicked="OnFilterClicked" />
                <Button
                    Text="Done"
                    FontSize="12"
                    FontAttributes="Bold"
                    TextColor="#555555"
                    BackgroundColor="White"
                    BorderColor="#E0E0E0"
                    BorderWidth="1"
                    CornerRadius="15"
                    Padding="12,5"
                    CommandParameter="Done"
                    Clicked="OnFilterClicked" />
            </HorizontalStackLayout>

            <Button
                Grid.Column="1"
                Text="+ Task"
                FontSize="12"
                FontAttributes="Bold"
                TextColor="White"
                BackgroundColor="Black"
                CornerRadius="15"
                Padding="12,5"
                Clicked="AddTaskClicked" />
        </Grid>

        <!--  SCROLLABLE CATEGORY LIST  -->
        <ScrollView Grid.Row="3">
            <CollectionView ItemsSource="{Binding Categories}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="0"
                            Margin="0,0,0,5"
                            CornerRadius="10"
                            HasShadow="False"
                            BorderColor="#E0E0E0"
                            IsVisible="{Binding IsVisible}">

                            <Frame.Triggers>
                                <DataTrigger TargetType="Frame" Binding="{Binding IsSelected}" Value="True">
                                    <Setter Property="BackgroundColor" Value="#EEEEEE" />
                                </DataTrigger>
                                <DataTrigger TargetType="Frame" Binding="{Binding IsSelected}" Value="False">
                                    <Setter Property="BackgroundColor" Value="White" />
                                </DataTrigger>
                            </Frame.Triggers>

                            <Grid RowDefinitions="Auto,Auto,Auto" BackgroundColor="White">

                                <!--  CATEGORY HEADER (Tappable)  -->
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="15,10">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnCategoryTapped" />
                                    </Grid.GestureRecognizers>

                                    <VerticalStackLayout Grid.Column="0" Spacing="2">
                                        <Label
                                            Text="{Binding CategoryName}"
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            TextColor="Black" />
                                        <Label
                                            FontSize="12"
                                            TextColor="Red">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="Deadline: " />
                                                    <Span Text="{Binding Deadline, Converter={StaticResource DateTimeConverter}}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </VerticalStackLayout>

                                    <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
                                        <Label
                                            FontSize="12"
                                            TextColor="#999999"
                                            VerticalOptions="Center">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding TotalTasks}" />
                                                    <Span Text=" Tasks" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label
                                            Text="✎"
                                            FontSize="16"
                                            TextColor="#999999"
                                            VerticalOptions="Center">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnEditCategoryTapped" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </HorizontalStackLayout>
                                </Grid>

                                <!--  PROGRESS BAR - Black only  -->
                                <ProgressBar
                                    Grid.Row="1"
                                    Progress="{Binding Percentage}"
                                    ProgressColor="Black"
                                    Margin="15,0,15,10"
                                    HeightRequest="6" />

                                <!--  EXPANDABLE TASK LIST  -->
                                <VerticalStackLayout Grid.Row="2" IsVisible="{Binding IsExpanded}" Padding="15,0,15,10">
                                    <BoxView HeightRequest="1" Color="White" Margin="0,0,0,10" />

                                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding CategoryTasks}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
                                                <HorizontalStackLayout Spacing="10" Padding="0,3">
                                                    <CheckBox
                                                        x:Name="taskCheckBox"
                                                        IsChecked="{Binding Completed}"
                                                        CheckedChanged="checkBox_CheckedChanged"
                                                        Color="Black"
                                                        VerticalOptions="Center" />
                                                    <Label
                                                        Text="{Binding TaskName}"
                                                        FontSize="14"
                                                        TextColor="Black"
                                                        VerticalOptions="Center">
                                                        <Label.Triggers>
                                                            <DataTrigger
                                                                Binding="{Binding Source={x:Reference taskCheckBox}, Path=IsChecked}"
                                                                TargetType="Label"
                                                                Value="True">
                                                                <Setter Property="TextDecorations" Value="Strikethrough" />
                                                                <Setter Property="TextColor" Value="#999999" />
                                                            </DataTrigger>
                                                        </Label.Triggers>
                                                    </Label>
                                                    <Label
                                                        Text="✎"
                                                        FontSize="14"
                                                        TextColor="#CCCCCC"
                                                        VerticalOptions="Center">
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="OnEditTaskTapped" />
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                </HorizontalStackLayout>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </VerticalStackLayout>

                                    <!--  CREATE NEW TASK BUTTON  -->
                                    <Button
                                        Text="+ Create new task"
                                        Margin="0,10,0,0"
                                        BackgroundColor="Transparent"
                                        TextColor="#999999"
                                        BorderColor="#E0E0E0"
                                        BorderWidth="1"
                                        CornerRadius="5"
                                        FontSize="14"
                                        Clicked="CreateTaskForCategoryClicked"
                                        CommandParameter="{Binding .}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>
